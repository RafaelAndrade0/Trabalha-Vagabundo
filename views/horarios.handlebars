{{#each horarios}}
    <div class="card card-body mb-2">
        <h4>{{dataMoment}}</h4>
        <strong>Horário de entrada: </strong><p>{{horario}} horas</p>

        <!-- Method Override -->
        <form method="post" action="horarios/{{id}}?_method=DELETE">
            <!-- Method Override -->
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block" value="Delete">
        </form>
    </div>

